<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, while customizations related to backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:maxHeight">87dp</item>
        <item name="android:maxWidth">87dp</item>
        <item name="android:minHeight">87dp</item>
        <item name="android:minWidth">87dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#888888</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Material Components theme for activities using MaterialCardView and other Material components -->
    <!-- Matches the light AppCompat theme appearance used in MainActivity -->
    <style name="AppTheme.MaterialComponents" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#F5F5F5</item>
        <item name="colorPrimaryVariant">#757575</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">#BDBDBD</item>
        <item name="colorSecondaryVariant">#757575</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="android:statusBarColor">#757575</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>
    
    <style name="AppTheme.MaterialComponents.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#F5F5F5</item>
        <item name="colorPrimaryVariant">#757575</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">#BDBDBD</item>
        <item name="colorSecondaryVariant">#757575</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="android:statusBarColor">#757575</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

</resources>
